<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/bundles/css/custom")
</head>
<body>

    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">Navbar</a>

        <div class="collapse navbar-collapse" id="navbarHeader">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Store</a>
                </li>
                <li class="nav-item store-nav--checkout">
                    <a class="nav-link" href="@Url.Action("Index", "Order")">Checkout</a>
                    <span class="badge badge-default badge-pill">$0</span>  @*TODO - Add current total amount in basket *@
                </li>

            </ul>
        </div>
    </nav>

    <div class="container">

        @RenderBody()
        @Scripts.Render("~/bundles/scripts")
        @Scripts.Render("~/bundles/scripts/custom")
        <script src="~/Scripts/toastr.min.js"></script>

    </div>
</body>
</html>

